namespace query;

enum Method:byte { Method_=0, Get = 1, Head, Post, Put, Delete }

table Pair {
  key:string;
  value:string;
}

table Request {
  method: Method;
  url:string;
  body:[ubyte];
  headers:[Pair];
}

table Response {
  status:short;
  content:[ubyte];
  type:string;
  headers:[Pair];
}

table Context {
  path:string;
  uuid:string;
  index:string;
  origin:string;
}

table Query {
  context: Context;
  request: Request;
  response: Response;
}

root_type Query;
